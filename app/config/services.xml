<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

        <services>
            <service id="main.application"
                class="Symfony\Component\Console\Application"
                >
                <call method="add">
                    <argument type="service" id="command.info" />
                </call>
            </service>
            <service id="command.info"
                class="DotfilesInstaller\Command\InfoCommand"
                >
                <argument type="service" id="main.config" />
            </service>

            <service id="main.config"
                class="DotfilesInstaller\Component\Config"
                >
                <argument>%config_path%</argument>
            </service>
        </services>
</container>

